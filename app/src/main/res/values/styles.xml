<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Dark">
        <item name="colorPrimary">@color/black_Secondary</item>
        <item name="colorPrimaryDark">@color/black_Priamry</item>
        <item name="colorAccent">@color/teal</item>
        <!--<item name="android:windowBackground">@color/colorPrimaryBlack</item>-->
        <!--<item name="android:colorBackground">@color/colorPrimaryBlack</item>-->
        <item name="android:textColorPrimary">@color/white_Primary</item>
        <item name="android:textColorSecondary">@color/white_Secondary</item>
        <item name="android:textColorTertiary">@color/white_Tertiary</item>





        <item name="android:textColorPrimaryInverse">@color/black_Priamry</item>
        <item name="android:textColorSecondaryInverse">@color/black_Secondary</item>
        <item name="android:textColorTertiaryInverse">@color/black_Secondary</item>


        <item name="android:textColorHighlight">@color/white_Primary</item>
        <item name="android:textColorHighlightInverse">@color/grey_Primary</item>



    </style>

    <style name="AppTheme.Light">
        <item name="colorPrimary">@color/white_Secondary</item>
        <item name="colorPrimaryDark">@color/black_Priamry</item>

        <item name="colorAccent">@color/teal</item>


        <item name="android:textColorPrimary">@color/black_Priamry</item>
        <item name="android:textColorSecondary">@color/black_Secondary</item>
        <item name="android:textColorTertiary">@color/black_Secondary</item>

        <item name="android:textColorPrimaryInverse">@color/white_Primary</item>
        <item name="android:textColorSecondaryInverse">@color/white_Secondary</item>
        <item name="android:textColorTertiaryInverse">@color/white_Secondary</item>


        <item name="android:textColorHighlight">@color/black_Priamry</item>
        <item name="android:textColorHighlightInverse">@color/grey_Secondary</item>



    </style>

    <style name="TextView_HeadingBig">
        <item name="android:textSize">@dimen/activity_TextView_HeadingBig_TextSize</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">32dp</item>
    </style>

</resources>
