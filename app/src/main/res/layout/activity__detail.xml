<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detail.Activity_Detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        >



        <TextView
            android:id="@+id/activityDetail_TextView_CoinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coin Name"
            android:layout_centerInParent="true"

            />

        <ImageView
            android:id="@+id/activityDetail_ImageView_CoinImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="#999"
            android:scaleType="fitXY"
            android:layout_toLeftOf="@+id/activityDetail_TextView_CoinName"
            android:layout_marginRight="@dimen/global_NearbyTwoItems_MarginBetween"
            />



    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/activityDetail_RelLt_PortfolioDataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="16dp"

        >



        <TextView
            android:id="@+id/activityDetail_TextView_DescNoOfCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portfolio"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/activityDetail_TextView_ValuePortfolioNoOfCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="720 eth"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/activityDetail_TextView_DescNoOfCoins"
            />

        <TextView
            android:id="@+id/activityDetail_TextView_DescTotalPriceCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Value"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/activityDetail_TextView_DescNoOfCoins"
            />

        <TextView
            android:id="@+id/activityDetail_TextView_ValueTotalPriceCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$56"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activityDetail_TextView_DescTotalPriceCurrent"
            android:layout_alignBottom="@+id/activityDetail_TextView_ValuePortfolioNoOfCoins"


            />

        <TextView
            android:id="@+id/activityDetail_TextView_DescTotalPriceOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Cost"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/activityDetail_TextView_DescNoOfCoins"

            />

        <TextView
            android:id="@+id/activityDetail_TextView_ValueTotalPriceOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$54"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activityDetail_TextView_DescTotalPriceOriginal"
            android:layout_alignBottom="@+id/activityDetail_TextView_ValuePortfolioNoOfCoins"

            />






    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/activityDetail_TabLayout_Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activityDetail_ViewPager_Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>










</LinearLayout>