<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:paddingBottom="112dp"
            android:layout_gravity="top"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                >

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_CoinName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Edit ETH Transaction"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_centerHorizontal="true"

                    />

                <ImageView
                    android:id="@+id/activityTransactionEdit_ImageView_DeleteTxnBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_remove_circle_black_24dp"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>



            <RadioGroup
                android:id="@+id/activityTransactionEdit_RadioGroup_BuySell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/activityTransactionEdit_RadioButton_Buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy" />


                <RadioButton
                    android:id="@+id/activityTransactionEdit_RadioButton_Sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sell" />

            </RadioGroup>


            <RelativeLayout
                android:id="@+id/activityTransactionEdit_RelLt_ExchangeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"

                >

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_DescriptionExchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Exchange"
                    android:textColor="#777"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_ValueExchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/activityTransactionEdit_TextView_DescriptionExchange"
                    android:text="Global Average"
                    android:textColor="#222"
                    android:textSize="18sp"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/activityTransactionEdit_TextView_DescriptionExchange"
                    android:gravity="bottom|right"
                    android:paddingRight="16dp"
                    android:text=">"
                    android:textSize="18sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#666" />


            <RelativeLayout
                android:id="@+id/activityTransactionEdit_RelLt_ContainerTradingPair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"

                >

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_DescriptionTradingPair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Trading Pair"
                    android:textColor="#777"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_ValueTradingPair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/activityTransactionEdit_TextView_DescriptionTradingPair"
                    android:hint="N/A"
                    android:text=""
                    android:textColor="#222"
                    android:textSize="18sp"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/activityTransactionEdit_TextView_DescriptionTradingPair"
                    android:gravity="bottom|right"
                    android:paddingRight="16dp"
                    android:text=">"
                    android:textSize="18sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#666" />

            <RelativeLayout
                android:id="@+id/activityTransactionEdit_RelLt_ContainerSingleCoinPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"

                >

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_DescriptionSingleCoinPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price per Coin"
                    android:textColor="#777"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/activityTransactionEdit_EditText_ValueSingleCoinPrice"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/activityTransactionEdit_TextView_DescriptionSingleCoinPrice"
                    android:hint="N/A"
                    android:text=""
                    android:textColor="#222"
                    android:textSize="18sp"
                    android:background="@null"


                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#666" />

            <RelativeLayout
                android:id="@+id/activityTransactionEdit_RelLt_ContainerQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"

                >

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_DescriptionQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textColor="#777"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/activityTransactionEdit_EditText_ValueQuantity"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/activityTransactionEdit_TextView_DescriptionQuantity"
                    android:hint="0"
                    android:text=""
                    android:textColor="#222"
                    android:textSize="18sp"
                    android:background="@null"



                    />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#666" />


            <RelativeLayout
                android:id="@+id/activityTransactionEdit_RelLt_ContainerTradingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"

                >

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_DescriptionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Date"
                    android:textColor="#777"
                    android:textSize="14sp" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#666"
                    android:layout_toRightOf="@id/activityTransactionEdit_TextView_DescriptionDate"
                    android:layout_toLeftOf="@id/activityTransactionEdit_TextView_ValueDate"
                    android:layout_centerHorizontal="true"

                    />

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_ValueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/activityTransactionEdit_TextView_DescriptionDate"
                    android:text="Janury 15 2019"
                    android:textColor="#222"
                    android:textSize="18sp"

                    />


                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_ValueTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/activityTransactionEdit_TextView_DescriptionDate"
                    android:gravity="bottom|right"
                    android:paddingRight="16dp"
                    android:text="7:00 pm"
                    android:textColor="#222"
                    android:textSize="18sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#666" />


            <RelativeLayout
                android:id="@+id/activityTransactionEdit_RelLt_ContainerNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"

                >

                <TextView
                    android:id="@+id/activityTransactionEdit_TextView_DescriptionNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Note"
                    android:textColor="#777"
                    android:textSize="14sp" />



                <EditText
                    android:id="@+id/activityTransactionEdit_EditText_ValueNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/activityTransactionEdit_TextView_DescriptionNote"
                    android:hint="Enter a note Here"
                    android:textColor="#222"
                    android:textSize="18sp"

                    />




            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#666" />




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/activityTransactionEdit_relLt_BtnAddTransaction"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/green"
        android:focusableInTouchMode="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Transaction"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>
</FrameLayout>
