<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/singleRowWatchlistAllCoin_Lt_Parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:background="@drawable/gradient_test2"
    >

<LinearLayout
    android:id="@+id/singleRowTransaction_RelativeLayout_Main"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="#111"


    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"

        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        >

        <TextView
            android:id="@+id/singleRowWatchlistAllCoin_TV_CoinRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="8dp"
            />


    <ImageView
        android:id="@+id/singleRowWatchlistAllCoin_ImageV_CoinImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_btc"
        android:layout_toRightOf="@+id/singleRowWatchlistAllCoin_TV_CoinRank"

        />

    <TextView
        android:id="@+id/singleRowWatchlistAllCoin_TV_CoinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/singleRowWatchlistAllCoin_ImageV_CoinImage"
        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"

        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="24dp"
        android:paddingTop="24dp"
        >


    <TextView
        android:id="@+id/singleRowWatchlistAllCoin_TV_MarketCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3572.21"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:gravity="left"
        android:layout_centerHorizontal="true"
        android:maxLines="1"

        />

    <TextView
        android:id="@+id/singleRowWatchlistAllCoin_TV_SingleCoinPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$167.24"
        android:textColor="#ccc"
        android:textSize="10sp"
        android:textAlignment="textEnd"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:layout_below="@+id/singleRowWatchlistAllCoin_TV_MarketCap"
        android:layout_centerHorizontal="true"

        />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/singleRowWatchlistAllCoin_FrameLt_ChartContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/singleRowWatchlistAllCoin_LineChart_Main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

        <TextView
            android:id="@+id/singleRowWatchlistAllCoin_TV_PriceChangePercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 3.5%"
            android:textColor="#FFF"
            android:textSize="8sp"
            android:paddingBottom="8dp"
            android:layout_gravity="bottom|center_horizontal"
            />


    </FrameLayout>





</LinearLayout>
</androidx.cardview.widget.CardView>