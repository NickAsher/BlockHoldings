<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleRowTransaction_RelativeLayout_Main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    >

    <ImageView
        android:id="@+id/singleRowTransaction_ImageView_CoinImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo_btc"

        />

    <TextView
        android:id="@+id/singleRowTransaction_TextView_CoinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        android:textColor="#333"
        android:textSize="16sp"
        android:maxLines="2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_alignTop="@+id/singleRowTransaction_ImageView_CoinImage"
        android:layout_toRightOf="@id/singleRowTransaction_ImageView_CoinImage"
        android:layout_alignParentTop="true"
        />


    <TextView
        android:id="@+id/singleRowTransaction_TextView_SingleCoinPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3572.21"
        android:textColor="#000"
        android:textSize="14sp"
        android:gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/singleRowTransaction_ImageView_CoinImage"
        android:layout_below="@+id/singleRowTransaction_TextView_CoinName"
        />




    <TextView
        android:id="@+id/singleRowTransaction_TextView_TotalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$357200"
        android:textColor="#333"
        android:textSize="16sp"
        android:textAlignment="textEnd"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/singleRowTransaction_ImageView_CoinImage"
        />


    <TextView
        android:id="@+id/singleRowTransaction_TextView_NoOfCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 BTC"
        android:textColor="#999"
        android:textSize="14sp"
        android:textAlignment="textEnd"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/singleRowTransaction_TextView_TotalCost"

        />

    <TextView
        android:id="@+id/singleRowTransaction_TextView_24hChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$167.24"
        android:textColor="#999"
        android:textSize="14sp"
        android:textAlignment="textEnd"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentRight="true"


        />



</RelativeLayout>