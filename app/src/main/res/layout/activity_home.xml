<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityPortfolio_RelLt_MainContainer"
    >

    <LinearLayout
        android:id="@+id/activityPortfolio_FrmLt_MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            >

            <TextView
                android:id="@+id/activityPortfolio_TextView_PortfolioName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/activityPortfolio_TextView_PortfolioBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activityPortfolio_TextView_PortfolioName"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/activityPortfolio_Btn_PortfolioChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change"
                android:textSize="12sp"
                android:padding="16sp"
                android:layout_alignBaseline="@+id/activityPortfolio_TextView_PortfolioBalance"
                android:layout_toRightOf="@+id/activityPortfolio_TextView_PortfolioBalance"
                />

            <Button
                android:id="@+id/activityPortfolio_Btn_PortfolioUpdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="updates"
                android:textSize="10sp"
                android:layout_alignBaseline="@+id/activityPortfolio_TextView_PortfolioBalance"
                android:layout_toRightOf="@+id/activityPortfolio_Btn_PortfolioChange"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                >
                <TextView
                    android:id="@+id/activityPortfolio_TextView_SortName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:onClick="setupSortingTextViewsNew"
                    />


                <TextView
                    android:id="@+id/activityPortfolio_TextView_SortSingleCoinPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CoinPrice"
                    android:textColor="#444"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:onClick="setupSortingTextViewsNew"

                    />


            </LinearLayout>




            <TextView
                android:id="@+id/activityPortfolio_TextView_SortTotalHoldings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Holdings  "
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_alignBaseline="@+id/activityPortfolio_TextView_SortName"
                android:gravity="center"
                android:onClick="setupSortingTextViewsNew"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <TextView
                    android:id="@+id/activityPortfolio_TextView_SortPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="change  "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:onClick="setupSortingTextViewsNew"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:id="@+id/activityPortfolio_TextView_SortChange24H"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1D"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:onClick="setupSortingTextViewsNew"


                        />

                    <TextView
                        android:id="@+id/activityPortfolio_TextView_SortChange7D"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7D"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:onClick="setupSortingTextViewsNew"


                        />

                    <TextView
                        android:id="@+id/activityPortfolio_TextView_SortChangeAll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="All"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:onClick="setupSortingTextViewsNew"


                        />


                </LinearLayout>

            </LinearLayout>







        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activityPortfolio_RecyclerView_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/activityHome_FAB_AddCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />





    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/activityHome_BottomNavigationView_Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:itemTextColor="@color/selector_bnv"
        app:itemIconTint="@color/selector_bnv"
        app:menu="@menu/bottom_navigation"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>