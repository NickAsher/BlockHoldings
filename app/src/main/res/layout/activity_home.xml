<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityPortfolio_RelLt_MainContainer"
    >

    <LinearLayout
        android:id="@+id/activityPortfolio_FrmLt_MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <fragment android:name="apps.yoo.com.blockholdings.ui.portfolio.Fragment_PortfolioBrief"
            android:id="@+id/activityPortfolio_Fragment_PortfolioBriefInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                >
                <TextView
                    android:id="@+id/activityPortfolio_TextView_SortName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:onClick="setupSortingTextViewsNew"
                    />


                <TextView
                    android:id="@+id/activityPortfolio_TextView_SortSingleCoinPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CoinPrice"
                    android:textColor="#444"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:onClick="setupSortingTextViewsNew"

                    />


            </LinearLayout>




            <TextView
                android:id="@+id/activityPortfolio_TextView_SortTotalHoldings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Holdings  "
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_alignBaseline="@+id/activityPortfolio_TextView_SortName"
                android:gravity="center"
                android:onClick="setupSortingTextViewsNew"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <TextView
                    android:id="@+id/activityPortfolio_TextView_SortPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change  "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center_horizontal|top"

                    android:onClick="setupSortingTextViewsNew"


                    />


                <co.ceryle.radiorealbutton.RadioRealButtonGroup
                    android:id="@+id/activityHome_RadioGroup_PriceChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:rrbg_backgroundColor="@color/transparent"

                    app:rrbg_dividerColor="@color/grey_500"
                    app:rrbg_dividerPadding="10dp"
                    app:rrbg_dividerRadius="0dp"
                    app:rrbg_dividerSize="1dp"

                    app:rrbg_enableDeselection="false"

                    app:rrbg_selectorColor="@color/blue_500"
                    app:rrbg_selectorFullSize="true"
                    app:rrbg_selectorSize="4dp"
                    app:rrbg_animateSelector_duration="300"

                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"

                    >

                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/activityHome_RadioBtn_1DayChange"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_text="24H"
                        app:rrb_textColor="@color/white"
                        app:rrb_textSize="10sp"

                        />

                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/activityHome_RadioBtn_1WeekChange"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_text="1W"
                        app:rrb_textColor="@color/white"
                        app:rrb_textSize="8sp"

                        />

                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/activityHome_RadioBtn_1MonthChange"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_text="1M"
                        app:rrb_textColor="@color/white"
                        app:rrb_textSize="8sp"

                        />



                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/activityHome_RadioBtn_MaxChange"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_text="MAX"
                        app:rrb_textColor="@color/white"
                        app:rrb_textSize="8sp"
                        app:rrb_checked="true"


                        />
                </co.ceryle.radiorealbutton.RadioRealButtonGroup>

