<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="#eee"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/singleRowWatchlistAllCoin_Lt_Parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="6dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:background="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/frgDetailNotification_Btn_RemoveNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Notificaiotn"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/frgDetailNotification_TV_NotificationDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="24sp"
                android:padding="16dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#888"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/frgDetailNotification_TV_NotificationContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="Notification Content"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_alignParentTop="true"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/frgDetailNotification_ImageView_AddNotificationBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_remove_circle_black_24dp"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:tint="?android:attr/textColorPrimary"
                    />

                <TextView
                    android:id="@+id/frgDetailNotification_TV_AddNotificationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="Add a Notification"
                    android:textSize="16sp"
                    android:layout_above="@+id/frgDetailNotification_ImageView_AddNotificationBtn"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="16dp"
                    />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="6dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:background="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/frgDetailNotification_TV_WidgetDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Widgets"
                android:textSize="24sp"
                android:padding="16dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#888"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/frgDetailNotification_TV_WidgetContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="Widget Content"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_alignParentTop="true"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/frgDetailNotification_ImageView_AddWidgetBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_remove_circle_black_24dp"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:tint="?android:attr/textColorPrimary"
                    />

                <TextView
                    android:id="@+id/frgDetailNotification_TV_AddWidgetText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="Add a Widget"
                    android:textSize="16sp"
                    android:layout_above="@+id/frgDetailNotification_ImageView_AddWidgetBtn"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="16dp"
                    />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>